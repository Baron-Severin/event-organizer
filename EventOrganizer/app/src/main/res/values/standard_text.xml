<?xml version="1.0" encoding="utf-8"?>
<!--#eeFAFAFA-->
<resources>
    <style name="primaryText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#303030</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="textnoborder" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#303030</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="detailText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="invisibleText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">1sp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
</resources>