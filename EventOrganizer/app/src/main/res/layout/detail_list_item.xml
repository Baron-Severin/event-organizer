<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:padding="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/colorPrimary"
            android:id="@+id/PARAM_ID_DETAIL_OVERALL"
            android:layout_weight="1">

            <TextView
                style="@style/primaryText"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"
                android:text="Header"
                android:id="@+id/PARAM_ID_DETAIL_HEADER" />

            <TextView
                style="@style/primaryText"
                android:text="Subtext1"
                android:id="@+id/PARAM_ID_DETAIL_SUBTEXT1"
                android:layout_marginTop="3dp" />

            <TextView
                style="@style/primaryText"
                android:text="Subtext2"
                android:id="@+id/PARAM_ID_DETAIL_SUBTEXT2" />

            <TextView
                style="@style/primaryText"
                android:text="Subtext3"
                android:id="@+id/PARAM_ID_DETAIL_SUBTEXT3" />

            <TextView
                style="@style/primaryText"
                android:text="Subtext4"
                android:id="@+id/PARAM_ID_DETAIL_SUBTEXT4"
                android:layout_marginRight="40dp" />
        </LinearLayout>

            <ImageButton
                android:theme="@style/Icon"
                android:src="@drawable/ic_contacts_black_24dp"
                android:tint="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:backgroundTint="@color/text"
                android:id="@+id/PARAM_ID_DETAIL_ICON"/>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>
